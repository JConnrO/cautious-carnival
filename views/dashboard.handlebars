<section class="card mb-3">
  <h2>Create New Post:</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title:</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="youtube-url">Youtube Link:</label>
      <input id="youtube-url" name="youtube-url" />
    </div>
    <div>
      <label for="description">Describe the recipe:</label>
      <input id="description" class="description" name="description" />
    </div>
    <button type="submit" class="btn hide">Create</button>
  </form>
</section>

{{#if recipes.length}}
<section>
  <h2 class="post-title">Your Posts</h2>
  <ol>
    {{#each recipes}}
    <li>
      <article class="post container card mb-3">
        <div class="recipe-title-card container row">
          <a href="{{title}}" target="_blank" class="recipe-title col-md-3">{{title}}</a>
          <span class="col-md-auto">({{description}})</span>
        </div>
