<form class="card mb-3 login-form container">
  <h2 class="col-md-2">Login:</h2>
  <div class="col-md-4">
    <label for="email-login">email:</label>
    <input type="text" class="email-login" />
  </div>
  <div class="col-md-4">
    <label for="password-login">password:</label>
     <input type="password" class="password-login" />
  </div>
   <div class="col-md-2">
    <button type="submit" class="login-btn hide">Login</button>
  </div>
</form>

<form class="card mb-3 signup-form container">
  <h2 class="col-md-4">Create Account:</h2>
  <div class="col-md-2">
    <label for="user-signup">username:</label>
    <input type="text" class="user-signup" />
  </div>
  <div class="col-md-2">
    <label for="email-signup">email:</label>
    <input type="text" class="email-signup" />
  </div>
  <div class="col-md-2">
    <label for="password-signup">password:</label>
    <input type="password" class="password-signup" />
  </div>
  <div class="col-md-2">
    <button type="submit" class="login-btn hide">Sign up</button>
  </div>
</form>

<script src="/javascript/login.js"></script>