<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="recipe-title" type="text" value="{{recipe.title}}" />
      <span>({{format_url recipe.youtube_url}})</span>
    </div>
    <div>
      {{recipe.vote_count}} {{format_plural "point" recipe.vote_count}} by you on {{format_date recipe.created_at}}
      |
    </div>
    <div>
      <input name="recipe-description" type="text" value="{{recipe.description}}" />
      <span>({{recipe.description}})</span>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>



<script src="/javascript/edit-post.js"></script>
